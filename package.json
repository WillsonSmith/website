    "rollup-plugin-minify-template-literals": "^1.1.2",
    "rollup-plugin-summary": "^2.0.0",
    "rollup-plugin-workbox": "^8.0.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
