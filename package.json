{
  "name": "w-2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "wireit",
    "watch": "wireit",
    "build": "wireit",
    "build:ssg": "wireit",
    "clean": "wireit",
    "clean:html": "wireit",
    "analyze": "wireit"
  },
  "wireit": {
    "analyze": {
      "dependencies": [
        "analyze:vscode",
        "analyze:cem"
      ]
    },
    "analyze:cem": {
      "command": "wca analyze src/**/*.js --format json --outFile custom-elements.json"
    },
    "analyze:vscode": {
      "command": "wca analyze src/**/*.js --format vscode --outFile vscode-html-custom-data.json"
    },
    "dev": {
      "command": "concurrently \"npm run watch\" \"wds\""
    },
    "watch": {
      "command": "node ssg.config.js --watch",
      "dependencies": [
        "build:ssg"
      ]
    },
    "build": {
      "command": "tsx ssg.config.js && rollup -c rollup.config.js",
      "dependencies": [
        "clean",
        "build:ssg"
      ]
    },
    "build:ssg": {
      "command": "npm run build -w ssg"
    },
    "clean": {
      "command": "rimraf build",
      "dependencies": [
        "clean:html"
      ]
    },
    "clean:html": {
      "command": "rimraf --glob \"src/**/*.html\""
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/ssg"
  ],
  "devDependencies": {
    "@custom-elements-manifest/find-dependencies": "^0.0.5",
    "@open-wc/dev-server-hmr": "^0.2.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@web/dev-server": "^0.2.5",
    "@web/dev-server-esbuild": "^0.4.1",
    "@web/rollup-plugin-html": "^2.0.0",
    "@web/rollup-plugin-import-meta-assets": "^2.0.0",
    "autoprefixer": "^10.4.14",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "cssnano": "^6.0.1",
    "esbuild-loader": "^3.0.1",
    "glob": "^10.3.3",
    "postcss": "^8.4.25",
    "postcss-import": "^15.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-workbox": "^8.0.1",
    "ssg": "^1.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "web-component-analyzer": "^1.1.7",
    "wireit": "^0.9.5"
  },
  "dependencies": {
    "@lit-labs/observers": "^2.0.0",
    "@lit-labs/ssr-client": "^1.1.2",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "lit": "^3.0.0-pre.0",
    "open-props": "^1.5.10",
    "tslib": "^2.6.0"
  }
}
