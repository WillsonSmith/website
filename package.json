{
  "name": "w-2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "postinstall": "patch-package",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "wireit",
    "build": "wireit",
    "watch": "wireit",
    "clean": "wireit",
    "clean:html": "wireit",
    "analyze": "wireit",
    "prepare": "husky install"
  },
  "wireit": {
    "analyze": {
      "command": "npx cem analyze --litelement --globs \"src/**/*\""
    },
    "dev": {
      "command": "npm run build; concurrently \"npm run watch\" \"wds\""
    },
    "esbuild": {
      "command": "node ./_build-utils/es-builder.js"
    },
    "watch": {
      "command": "node ./_build-utils/es-builder.js --watch"
    },
    "build": {
      "command": "rollup -c rollup.config.js",
      "dependencies": [
        "clean",
        "esbuild"
      ]
    },
    "clean": {
      "command": "rimraf build",
      "dependencies": [
        "clean:html"
      ]
    },
    "clean:html": {
      "command": "rimraf --glob \"src/**/*.html\""
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
