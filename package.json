    "@hachi-dev/renderer": "^1.0.0",
    "@lit-labs/observers": "^2.0.0",
    "@lit-labs/ssr-client": "^1.1.2",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "glob": "^10.3.3",
    "lit": "^3.0.0-pre.0",
    "open-props": "^1.5.10",
    "patch-package": "^7.0.2"
  },
  "lint-staged": {
    "**/*.css": [
      "stylelint \"src/**/.css\" --fix"
    ],
    "**/*.{js,ts}": [
      "stylelint \"src/**/*.{js,ts}\" --fix",
      "eslint --fix",
      "prettier --write"
    ]
  }
