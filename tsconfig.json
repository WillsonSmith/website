{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    // "allowImportingTsExtensions": true,
    // "emitDeclarationOnly": true,
    "lib": ["ES2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    // "experimentalDecorators": true,
    // "useDefineForClassFields": false,
    "importHelpers": true,
    "rootDir": "./src",
    // "outDir": "./site",
    "sourceMap": false,
    "inlineSources": false,
    "incremental": false,
    "checkJs": true,
    // ignore warnings
    "skipLibCheck": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules", "packages"]
}
