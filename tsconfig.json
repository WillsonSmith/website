{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "rootDir": "./src",
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "plugins": [{ "name": "ts-lit-plugin" }]
  },
  "parserOptions": {
    "plugins": ["decorators-legacy"]
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules", "packages"]
}
